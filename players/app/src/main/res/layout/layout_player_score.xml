<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerScoreLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pScoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="PlayerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pScoreTies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/pScoreLosses"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pScoreLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/pScoreWins"
        app:layout_constraintEnd_toStartOf="@+id/pScoreTies" />

    <TextView
        android:id="@+id/pScoreWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/pScoreName"
        app:layout_constraintEnd_toStartOf="@+id/pScoreLosses" />
</androidx.constraintlayout.widget.ConstraintLayout>